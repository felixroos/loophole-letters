---
import { format } from "date-fns";

export interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    format(date, "MMMM yyyy")
    /* date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    }) */
  }
</time>
